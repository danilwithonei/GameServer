{
    "compilerOptions": {
        "lib": ["es2020"],
        "outDir": "./dst",
        // "rootDir": "src/",
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },

    "include": ["src/**/*.ts", "src/**/*.json", ".env"],
    "exclude": ["node_modules"]
}
